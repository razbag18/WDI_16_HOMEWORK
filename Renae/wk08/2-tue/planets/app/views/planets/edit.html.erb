<form action="/planets/<%= @planet.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="text" name="name" placeholder="Planet name" value="<%= @planet.name %>">
  <input type="text" name="img_url" placeholder="url" value="<%= @planet.img_url %>">
  <button>Edit</button>
</form>

